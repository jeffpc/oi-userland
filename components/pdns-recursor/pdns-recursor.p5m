set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

<transform file path=etc/init.d/pdns-recursor -> drop>
<transform dir  path=etc/init.d -> drop>
<transform file path=etc/powerdns/recursor.conf-dist -> drop>
<transform dir  path=etc/powerdns$ -> default owner powerdns>
<transform dir  path=etc/powerdns$ -> default group powerdns>

file files/recursor.conf path=etc/powerdns/recursor.conf owner=powerdns group=powerdns preserve=true
dir  path=lib
dir  path=lib/svc
dir  path=lib/svc/manifest
dir  path=lib/svc/manifest/network
dir  path=lib/svc/manifest/network/dns
file files/pdns-recursor.xml path=lib/svc/manifest/network/dns/pdns-recursor.xml
dir  path=lib/svc/method
file files/pdns-recursor path=lib/svc/method/pdns-recursor
dir  path=var
dir  path=var/run group=sys
dir  path=var/run/powerdns owner=powerdns group=powerdns

user gcos-field="PowerDNS daemons" username="powerdns" group="powerdns" uid=88
group groupname="powerdns" gid="88"

dir  path=etc
dir  path=etc/init.d
file path=etc/init.d/pdns-recursor
dir  path=etc/powerdns
file path=etc/powerdns/recursor.conf-dist
dir  path=usr
dir  path=usr/bin
file path=usr/bin/rec_control
dir  path=usr/sbin
file path=usr/sbin/pdns_recursor
dir  path=usr/share
dir  path=usr/share/man
dir  path=usr/share/man/man1
file path=usr/share/man/man1/pdns_recursor.1
file path=usr/share/man/man1/rec_control.1
